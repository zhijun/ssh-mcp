{
  "connections": [
    {
      "name": "production-server",
      "host": "prod.example.com",
      "username": "admin",
      "private_key": "/path/to/your/private_key",
      "tags": ["production", "web"]
    },
    {
      "name": "development-server", 
      "host": "dev.example.com",
      "username": "developer",
      "password": "your_password_here",
      "port": 22,
      "tags": ["development"]
    },
    {
      "name": "database-server",
      "host": "db.example.com", 
      "username": "dbadmin",
      "port": 2222,
      "private_key": "/path/to/db_key",
      "tags": ["database", "production"]
    }
  ],
  "auto_connect": ["production-server"],
  "default_timeout": 30
}